#include <stdio.h>
#include<string.h>
int ishaveE(char s[])
{
    for(int i=0;i<strlen(s);i++)
        if(s[i]=='E')return 1;
    return 0;
}
void add(char s[],char temp[])
{
    int i,j;
    for(i=strlen(s),j=0;j<strlen(temp);j++,i++)
        s[i]=temp[j];
    s[i]='\0';
}
int pro91()
{
    char s[5000];
    int flag=0;
    while(scanf("%s",s)!=EOF)
    {
        while(!ishaveE(s))
        {
            char temp[60];
            scanf("%s",temp);
            add(s,temp);
        }
        if(flag)
            printf("\n");

        flag=1;
        int len;
        for(len=0;len<strlen(s)&&s[len]!='E';len++);
        int m[30],n[30],cnt=0;
        int W=0,L=0;
        for(int i=0;i<len;i++)
        {
            if(W>=11&&W-L>=2||L>=11&&L-W>=2||W>=11&&L>=11&&abs(W-L)>=2)
            {
                m[cnt]=W;
                n[cnt]=L;
                cnt++;
                W=0;
                L=0;
            }
            if(s[i]=='W')W++;
            else L++;
        }
        for(int i=0;i<cnt;i++)
            printf("%d:%d\n",m[i],n[i]);
        if(W||L)
            printf("%d:%d\n",W,L);
        printf("\n");
        cnt=0,W=0,L=0;
        for(int i=0;i<len;i++)
        {
            if(W>=21&&W-L>=2||L>=21&&L-W>=2||W>=21&&L>=21&&abs(W-L)>=2)
            {
                m[cnt]=W;
                n[cnt]=L;
                cnt++;
                W=0;
                L=0;
            }
            if(s[i]=='W')W++;
            else L++;
        }
        for(int i=0;i<cnt;i++)
            printf("%d:%d\n",m[i],n[i]);
        if(W||L)
            printf("%d:%d\n",W,L);
    }
}
int main()
{
	

	pro91();
	return 0;
}
